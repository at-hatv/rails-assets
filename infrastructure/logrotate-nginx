/var/log/nginx/*.log {
	daily
	missingok
        dateext
	rotate 5
	compress
	nodelaycompress
	notifempty
	create 0664 rails-assets adm
	sharedscripts
	prerotate
		if [ -d /etc/logrotate.d/httpd-prerotate ]; then \
			run-parts /etc/logrotate.d/httpd-prerotate; \
		fi \
	endscript
	postrotate
                nginx -s reopen
                passenger-config reopen-logs
	endscript
}
